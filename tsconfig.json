{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM", "WebWorker", "DOM.Iterable"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "dist",
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "files": ["./.eslintrc.json"],
  "include": ["src", "*.ts", "*.js", "*.mjs", ".astro/types.d.ts"],
  "exclude": ["dist"]
}
