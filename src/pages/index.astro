---
import { getCollection } from "astro:content";
import { posts } from "../config/posts";
import { ABOUT_ME, SOCIAL_LINKS, PROFESSIONAL_INFO } from "../config/constants";
import SocialButton from "../components/SocialButton.astro";
import BlogImage from "../components/BlogImage.astro";
import SEO from "../components/SEO.astro";
import Analytics from "../components/Analytics.astro";
import { validateAllPostImages } from "../utils/validateImages";

// Get local blog posts
const blogPosts = await getCollection("blog");

// Combine local posts and external posts
const allPosts = [
  ...blogPosts.map((post) => ({
    ...post.data,
    slug: post.slug,
    url: `/blog/${post.slug}`,
  })),
  ...posts.map((post) => ({
    ...post,
    slug: post.url,
  })),
].sort((a, b) => {
  const dateA = new Date(a.publishDate);
  const dateB = new Date(b.publishDate);
  return dateB.getTime() - dateA.getTime();
});

// Validate that all post images exist
validateAllPostImages(allPosts);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <SEO title={PROFESSIONAL_INFO.fullTitle} description={ABOUT_ME.description} image="/me.png" type="website" />

    <Analytics />
  </head>
  <body class="bg-background text-foreground font-sans leading-relaxed">
    <!-- Hero Section -->
    <header
      class="relative overflow-hidden text-center border-b border-border-tertiary pt-16 px-8 pb-14 mobile:pt-10 mobile:px-4 mobile:pb-8"
      style="background: linear-gradient(135deg, rgb(11, 16, 32) 0%, rgb(15, 22, 41) 100%);"
    >
      <!-- Subtle accent overlay -->
      <div
        class="absolute inset-0 pointer-events-none"
        style="background: radial-gradient(circle at 50% 50%, rgba(96, 165, 250, 0.05) 0%, transparent 70%);"
      >
      </div>

      <h1
        class="relative z-10 mb-6 font-bold text-white"
        style="font-size: clamp(2.5rem, 6vw, 4rem); letter-spacing: -0.02em; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);"
      >
        {PROFESSIONAL_INFO.name}
      </h1>

      <!-- Profile Image -->
      <div class="relative z-10 mb-6">
        <img
          src="/me.png"
          alt={PROFESSIONAL_INFO.name}
          class="w-32 h-32 md:w-40 md:h-40 mx-auto rounded-full object-cover border-4 border-white/20 shadow-2xl"
        />
      </div>

      <p
        class="relative z-10 mb-8 font-medium text-primary"
        style="font-size: clamp(1.1rem, 3vw, 1.5rem); letter-spacing: 0.01em;"
      >
        {PROFESSIONAL_INFO.tagline}
      </p>
      <p
        class="relative z-10 mx-auto mb-12 font-normal text-muted max-w-2xl"
        style="font-size: clamp(1rem, 2.5vw, 1.2rem); line-height: 1.7;"
      >
        {ABOUT_ME.short}
      </p>

      <!-- Social Links -->
      <div class="relative z-10 flex justify-center items-center flex-wrap sm:flex-nowrap gap-4 sm:gap-5 mt-4">
