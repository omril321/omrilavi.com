            ></path>
          </svg>
        </SocialButton>
      </div>
    </header>

    <!-- Posts Grid -->
    <main class="max-w-6xl mx-auto p-8 bg-surface">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
        {
          allPosts.map((post) => {
            const isExternal = post.url.startsWith("http");
            return (
              <article class="group bg-surface rounded-xl overflow-hidden shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
                <a
                  href={post.url}
                  class="block text-inherit no-underline"
                  target={isExternal ? "_blank" : "_self"}
                  rel={isExternal ? "noopener noreferrer" : ""}
                >
                  <BlogImage src={post.image} alt={post.title} />
                  <div class="p-6">
                    <h2 class="text-xl font-semibold text-foreground mb-2 leading-tight line-clamp-2">{post.title}</h2>
                    <p class="text-muted text-sm mb-4 leading-relaxed line-clamp-3">{post.description}</p>
                    <div class="flex items-center justify-between text-xs text-muted">
                      <time datetime={post.publishDate} class="font-medium">
                        {post.publishDate}
                      </time>
                      {isExternal && (
                        <span class="bg-primary/20 text-primary px-2 py-1 rounded-full font-medium">External</span>
                      )}
                    </div>
                  </div>
                </a>
              </article>
            );
          })
        }
      </div>
    </main>
  </body>
</html>
