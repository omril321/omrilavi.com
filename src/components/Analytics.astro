---
import { GTAG } from "../config/constants";

// Only load Google Analytics in production, exclude dev and Cypress tests
const isDev = import.meta.env.DEV;
const shouldLoadAnalytics = !isDev;
---

{shouldLoadAnalytics && (
  <>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${GTAG}`}></script>
    <script is:inline define:vars={{ GTAG }}>
      const isCypressTest = window?.navigator?.userAgent?.toLowerCase().includes('cypress');
      const shouldLoadAnalytics = !isDev && !isCypressTest;

      if (shouldLoadAnalytics) {
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', GTAG);
      }
    </script>
  </>
)}
