---
export interface Props {
  href: string;
  label: string;
  platform: "linkedin" | "github" | "devto" | "medium" | "twitter";
}

const { href, label, platform } = Astro.props;

const baseClasses =
  "group relative flex items-center justify-center transition-all duration-300 ease-out bg-white/5 border border-white/10 backdrop-blur-sm overflow-hidden hover:scale-105 hover:-translate-y-1 hover:shadow-xl hover:shadow-black/30";

// Platform-specific hover styles (shorter syntax)
const platformHover = {
  linkedin: "hover:border-linkedin hover:bg-linkedin/20 group-hover:text-linkedin",
  github: "hover:border-white hover:bg-white/10 group-hover:text-white",
  devto: "hover:border-white hover:bg-black/30 group-hover:text-white",
  medium: "hover:border-medium hover:bg-medium/20 group-hover:text-medium",
  twitter: "hover:border-twitter hover:bg-twitter/20 group-hover:text-twitter",
};
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={label}
  class={`${baseClasses} ${platformHover[platform]} w-12 h-12 sm:w-14 sm:h-14 rounded-lg`}
>
  <!-- Shine effect -->
  <div
    class="absolute inset-0 -translate-x-full transition-transform duration-500 ease-out group-hover:translate-x-full bg-gradient-to-r from-transparent via-white/10 to-transparent"
  >
  </div>

  <!-- Icon -->
  <div class="relative z-10 fill-current text-gray-200 transition-colors duration-300 w-5 h-5">
    <slot />
  </div>
</a>
