{
  "name": "omrilavi.com",
  "type": "module",
  "description": "About Omri Lavi",
  "engines": {
    "node": ">=24.0.0"
  },
  "private": true,
  "scripts": {
    "build": "astro build",
    "build:astro": "astro build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/netlify-edge/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "cypress:test": "start-server-and-test dev:astro http://localhost:4321 cypress:run",
    "cypress:dev": "start-server-and-test dev:astro http://localhost:4321 cypress",
    "cypress:test:prod": "start-server-and-test preview:astro http://localhost:4321 cypress:run",
    "deploy": "netlify deploy --build",
    "dev": "vite --mode ssr",
    "dev:astro": "astro dev",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "preview:astro": "astro preview",
    "start": "vite --open --mode ssr",
    "test": "vitest",
    "test.ui": "vitest --ui components",
    "qwik": "qwik",
    "astro": "astro"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/sitemap": "^3.5.0",
    "@astrojs/tailwind": "^6.0.2",
    "@builder.io/partytown": "^0.10.2",
    "@builder.io/qwik": "^1.11.0",
    "@builder.io/qwik-city": "^1.11.0",
    "@netlify/edge-functions": "^2.11.1",
    "@types/cypress-image-snapshot": "^3.1.9",
    "@types/eslint": "8.37.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "22",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.13",
    "cypress": "^12.11.0",
    "cypress-image-snapshot": "^4.0.1",
    "eslint": "8.37.0",
    "eslint-plugin-qwik": "0.101.0",
    "netlify-cli": "^17.38.1",
    "postcss": "^8.4.16",
    "prettier": "2.8.7",
    "start-server-and-test": "^2.0.13",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.9.2",
    "undici": "5.21.0",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "^0.34.6",
    "zod": "^4.0.17"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.13.2",
    "color": "^4.2.3",
    "page-metadata-parser": "^1.1.4",
    "typeface-open-sans": "^1.1.13"
  }
}
